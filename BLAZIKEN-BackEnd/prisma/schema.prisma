generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  password String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("clients")
}

model Product {
  
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  price Float
  base64Image String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("products")
}

